.hero-unit
  -unless Presentation.upcoming.empty?
    %h1
      = link_to presentation_path(:id => Presentation.upcoming.first.name) do
        = Presentation.upcoming.first.name
      = " â€“ #{Presentation.upcoming.first.corporation}" 
    %h1
      = Presentation.upcoming.first.presentation_date.to_date
    
%h3
  Kommende bedriftspresentasjoner

%table.table
  %thead
    %tr
      %th Tittel
      %th Bedrift
      %th Dato
      %th Klokkeslett
      %th Ledige Plasser
  - unless Presentation.upcoming.empty?
    - Presentation.upcoming.each do |post|
      %tr
        %td
          = link_to presentation_path(post.id) do
            = post.name
        %td
          = post.corporation
        %td
          = post.presentation_date.to_date
        %td
          = post.presentation_date.strftime("%H:%M")
        %td
          = post.guest_limit

