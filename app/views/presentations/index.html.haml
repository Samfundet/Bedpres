.hero-unit
  -unless @upcoming_presentations.empty?
    %h1
      = link_to presentation_path(:id => @upcoming_presentations.first) do
        = @upcoming_presentations.first.name
      = " â€“ #{@upcoming_presentations.first.corporation}"
    %h1
      = @upcoming_presentations.first.presentation_date.to_date

%h3
  Kommende bedriftspresentasjoner
%table.table
  %thead
    %tr
      %th Tittel
      %th Bedrift
      %th Dato
      %th Klokkeslett
      %th Ledige Plasser
  - unless @upcoming_presentations.empty?
    - @upcoming_presentations.each do |presentation|
      %tr
        %td
          = link_to presentation.name, presentation
        %td
          = presentation.corporation
        %td
          = presentation.presentation_date.to_date
        %td
          = presentation.presentation_date.strftime("%H:%M")
        %td
          = presentation.guest_limit - presentation.users.size

-if permitted_to? :new, :presentations
