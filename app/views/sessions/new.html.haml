%h1 Logg in

.row
  .span6
    %h2 Bruker
    = semantic_form_for User.new(:email => @user_mail), :url => login_path, :html => { :class => "form-horizontal" } do |f|
      = f.inputs do
        = f.input :email
        = f.input :password
      = f.actions do
        = f.action :submit, :label => "Logg inn"

  .span6
    %h2 Admin-pÃ¥logging
    = semantic_form_for Member.new(:mail => @member_mail), :url => login_path, :html => { :class => "form-horizontal" } do |f|
      = f.inputs do
        = f.input :mail
        = f.input :passord, :as => :password
      = f.actions do
        = f.action :submit, :label => "Logg inn"

%p
  = link_to "Ingen bedpres-bruker? Lag ny konto her!", new_user_path