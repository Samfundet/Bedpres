%h1 
  = "Rediger #{@current_user.full_name}"


= semantic_form_for @user, :html => { :class => "form-horizontal" } do |f|
  = f.inputs do
    = f.input :email
    = f.input :firstname
    = f.input :surname
    = f.input :password_old
    = f.input :password_new
    = f.input :password_confirmation

  = f.actions do
    = f.action :submit
